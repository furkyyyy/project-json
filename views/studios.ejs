<%- include("partials/navbar") %>

<main class="flex-grow-1 container mt-4">
    <h1 class="mb-4">Studios</h1>
    <div class="row">
        <% studios.forEach(studio => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <a href="/detail-studio/<%= studio.id %>" class="text-decoration-none text-dark">
                    <div class="card h-100 hover-card">
                        <div class="card-body text-center">
                            <img src="<%= studio.logoUrl %>" alt="<%= studio.name %>" class="img-fluid mb-3" style="max-height: 100px;">
                            <h5 class="card-title"><%= studio.name %></h5>
                        </div>
                    </div>
                </a>
            </div>
        <% }) %>
    </div>
</main>

<%- include("partials/footer") %>

<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hover-card:hover {
        transform: scale(1.03);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }
</style>
